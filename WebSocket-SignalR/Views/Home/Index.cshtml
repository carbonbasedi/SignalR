@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<section id="joinGroupSection" class="col-12">
		<form id="joinGroupForm">
			<div class="form-group">
				<label>Username</label>
				<input id="name" class="form-control" />
			</div>
			<div class="form-group mt-3">
				<label>Group</label>
				<select class="form-select" id="group">
					<option value="1">Group 1</option>
					<option value="2">Group 2</option>
					<option value="3">Group 3</option>
				</select>
			</div>
			<div class="form-group mt-3">
				<button class="btn btn-success" type="submit">Join</button>
			</div>
		</form> 
	</section>
	<section id="chatSection" class="row mt-5 d-none">
		<div class="col-12">
			<button class="btn btn-danger" id="leaveGroup">Leave Group</button>
		</div>
		<div class="col-4">
			<form id="sendMessageForm">
				<div class="form-group">
					<label class="d-block">Message</label>
					<textarea id="message" class="w-100"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-success">Send</button>
				</div>
			</form>
		</div>
		<div class="col-8">
			<ul id="messages"></ul>
		</div>
	</section>
</div>

@section Scripts {
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<script src="~/js/chat.js"></script>
}